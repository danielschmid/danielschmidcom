---
import "@styles/global.css";

import BaseHead from "../components/BaseHead.astro";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
}

const { 
  title = "Daniel Schmid", 
  description = "Daniel Schmid's personal website", 
  canonical = new URL(Astro.url.pathname, Astro.site).href 
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={title} description={description} canonical={canonical} />
    </head>
    <body>
        <slot />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
