---
import '@styles/global.css'

import BaseHead from '@components/BaseHead.astro'

interface Props {
	title?: string
	description?: string
	canonical?: string
}

const {
	title = 'Daniel Schmid',
	description = 'Daniel Schmid',
	canonical = new URL(Astro.url.pathname, Astro.site).href
} = Astro.props
---

<!doctype html>
<html lang="en" class="m-0 h-full w-full">
	<head>
		<BaseHead title={title} description={description} canonical={canonical} />
	</head>
	<body class="m-0 h-full w-full">
		<main class="p-3">
			<slot />
		</main>
	</body>
</html>
